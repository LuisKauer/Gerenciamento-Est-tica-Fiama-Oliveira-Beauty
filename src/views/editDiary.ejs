<%- include("includes/head") %> 

<body>
<%- include("includes/header") %> 
<%- include("includes/navBar") %>
  <div class="containerRecord">
  <%- include("includes/alert") %>
  <h3>Edite o Serviço: </h3> 
  
  <form method="post" action="/diary/update/<%= diary._id %>">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div div id="div-data">
      <input class="input-1-6" type="text" name="date" id="data" autocomplete="on"placeholder="Data" value="<%= diary.date %>">
      <label for="data">Data</label>
    </div>
    <div div id="div-startTime" title="Digite a hora inicial">
      <input class="input-1-6" type="text" name="startTime" id="startTime" autocomplete="on"placeholder="Hora Inicial" value="<%= diary.startTime %>">
      <label for="startTime">Hora Inicial</label>
    </div>
    <div div id="div-endTime" title="Digite a hora inicial">
      <input class="input-1-6" type="text" name="endTime" id="endTime" autocomplete="on"placeholder="Hora Final" value="<%= diary.endTime %>">
      <label for="endTime">Hora Final</label>
    </div>
    <div id="div-cliente">
      <input class="input-3-6" type="text" name="client" id="cliente" autocomplete="on" placeholder="Cliente" value="<%= diary.client %>">
      <label for="cliente">Cliente</label>
    </div>
    <div id="div-service">
      <input class="input-3-6" type="text" name="service" id="servico" autocomplete="on" placeholder="Serviço" value="<%= diary.service %>">
      <label for="servico">Serviço</label>
    </div>
    <div id="div-btn"><input class="input-1-6 lancar" type="submit" value="Atualizar"></div>

  </form>
  </div>
</body>
</html>